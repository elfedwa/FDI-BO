
#!/bin/bash

date
location="$PWD"
echo "$location"
parent_location="$(dirname "$location")"

JOBID=`sbatch $parent_location/run.bash $1 | tee  vasp_aw.log`
JOBID=`echo $JOBID | awk {'print $4'}`

echo $JOBID
echo "file_location is = $1"


echo "file_location is = $1, $DATE_, $location"


DATE_=`date '+%H:%M:%S'`
echo "$JOBID,'Starting',$DATE_" >> $parent_location/$1/profiling.csv

while true
do

sleep 1

squeue | grep $JOBID > /dev/null

if [[ $? -ne 0 ]];then

        echo "job completed"
        break;

fi

done
DATE_=`date '+%H:%M:%S'`
echo "$JOBID,'Completed',$DATE_" >> $parent_location/$1/profiling.csv
date

